        "UnzipUpdateSource": false,
        "OverwriteExistingFiles": true
    },
    {
        "UpdateStageName": "7-Zip Files Extract",
        "UpdateSourcePlatform": "Linux",
        "UpdateSource": "Executable",
        "UpdateSourceData": "/bin/bash",
        "UpdateSourceArgs": "-c 'cd ./sit/7-Zip && /usr/bin/tar -xf 7z2301-linux-x64.tar.xz >/dev/null 2>&1 && rm -f 7z2301-linux-x64.tar.xz'"
    },
    {
        "UpdateStageName": "7-Zip Files Extract",
        "UpdateSourcePlatform": "Windows",
        "UpdateSource": "Executable",
        "UpdateSourceData": "cmd.exe",
        "UpdateSourceArgs": "/C cd sit\\server && ..\\7-Zip\\7zr.exe x -y pf2_full_*.7z.001 > NUL 2>&1 && del /Q /F pf2_full_*.7z.*"
    },
    {
        "UpdateStageName": "SPT Files Extract",
        "UpdateSourcePlatform": "Windows",
        "UpdateSource": "Executable",
        "UpdateSourceData": "cmd.exe",
        "UpdateSourceArgs": "/C cd sit\\server && ..\\7-Zip\\7zr.exe x -y RELEASE-SPT*.7z.001 > NUL 2>&1 && del /Q /F RELEASE-SPT*.7z.*"
    },
    {
        "UpdateStageName": "SPT Files Extract",
        "UpdateSourcePlatform": "Linux",
        "UpdateSource": "Executable",
        "UpdateSourceData": "/bin/bash",
        "UpdateSourceArgs": "-c 'cd ./sit/server && ../7-Zip/7zzs x -y RELEASE-SPT*.7z.001 >/dev/null 2>&1 && rm -f RELEASE-SPT*.7z.*'"
    },
    {
        "UpdateStageName": "SIT Download",
